<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.esgi.tpfx.HelloController">
    <children>
        <VBox spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <!-- Première ligne de boutons : actions principales -->
                <HBox spacing="10.0">
                    <Button onAction="#addNewTask" text="Add Task" />
                    <Button onAction="#deleteTask" text="Delete Task" />
                    <Button onAction="#exitProgram" text="Exit" />
                </HBox>

                <!-- Deuxième ligne de boutons : sauvegarde et chargement -->
                <HBox spacing="10.0">
                    <Button onAction="#saveFromDialog" text="Save As..." />
                    <Button onAction="#loadFromDialog" text="Load From..." />
                </HBox>

                <!-- Champ de saisie -->
                <TextField fx:id="newTask" promptText="Ajoutez une tâche" />

                <!-- Liste des tâches -->
                <ListView fx:id="taskList" prefHeight="350.0" />
            </children>
        </VBox>
    </children>
</AnchorPane>